<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.chicko.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/providerListFragment"
        android:name="com.example.chicko.ProviderListFragment"
        android:label="fragment_provider_list"
        tools:layout="@layout/fragment_provider_list" >
        <action
            android:id="@+id/action_providerListFragment_to_serviceFragment2"
            app:destination="@id/serviceFragment" />
    </fragment>
    <fragment
        android:id="@+id/serviceFragment"
        android:name="com.example.chicko.ServiceFragment"
        android:label="ServiceFragment" >
        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>
</navigation>